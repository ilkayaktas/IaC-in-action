{
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US.UTF-8<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US.UTF-8<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=master.k8s<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/master/{{user `preseed_path`}}<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_url": "{{ user `guest_additions_url` }}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Ubuntu_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "{{user `http_directory`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "output_directory": "{{ user `build_directory` }}/packer-{{user `template`}}-master",
      "shutdown_command": "echo 'iaktas' | sudo -S shutdown -P now",
      "ssh_password": "iaktas",
      "ssh_port": 22,
      "ssh_username": "iaktas",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "format": "ova",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"],
        ["modifyvm", "{{.Name}}", "--vram", "{{ user `vram` }}"],
        ["hostonlyif", "create"],
        ["hostonlyif", "ipconfig", "{{user `network_interface_name`}}", "--ip", "{{user `network_interface_ip`}}"],
        ["dhcpserver", "add", "--ifname", "{{user `network_interface_name`}}", "--ip", "{{user `network_dhcp_server_ip`}}",
          "--netmask", "{{user `network_dhcp_netmask`}}", "--lowerip", "{{user `network_dhcp_lower_ip`}}", "--upperip", "{{user `network_dhcp_upper_ip`}}"
        ],
        ["dhcpserver", "modify", "--ifname", "{{user `network_interface_name`}}","--enable"],
        ["modifyvm", "{{.Name}}", "--nic1", "hostonly"],
        ["modifyvm", "{{.Name}}", "--hostonlyadapter1", "{{user `network_interface_name`}}"],
        ["modifyvm", "{{.Name}}", "--nic2", "nat"]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `template` }}-master",
      "name":"{{ user `template` }}-master"
    },
